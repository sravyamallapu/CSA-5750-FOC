#include <stdio.h>
#include<conio.h>
int main()
{
    int i, n;
  
    printf("Print all even numbers till: ");
    scanf("%d", &n);

    printf("Even numbers from 2 to %d are: \n", n);

  
    for(i=2; i<=n; i++)
    {
    
        if(i%2 == 0)
        {
            printf("%d\n", i);
        }
    }

    return 0;
}
